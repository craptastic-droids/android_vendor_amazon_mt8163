// ========================================================
// libudf.so
// ========================================================
cc_library_shared {
    srcs: [
        "malloc_debug/recorder.c",
        "ubrd_core/recorder.c",
        "ubrd_core/backtrace.cpp",
        "ubrd_core/sighandler.c",
        "ubrd_core/dump.c",
        "mmap_debug/mmap_debug.c",
        "fdleak_debug/fdleak_debug.cpp",
        // "pthread_debug/pthread_debug.cpp",
    ],

    arch: {
        arm: {
            srcs: [
                "unwind/backtrace.c",
                "unwind/backtrace-helper.c",
                "unwind/map_info.c",
                "unwind/ptrace.c",
                "unwind/arch-arm/backtrace-arm.c",
            ],
        },
    },

    static_libs: [
        "libasync_safe",
    ],

    shared_libs: [
        "liblog",
        "libdl",
        "libbase",
        "libunwindstack",
    ],

    cflags: [
      "-DCORKSCREW_HAVE_ARCH",
      "-DSELF_UNWIND_NO_GCC",
      "-fvisibility=hidden",
      "-Wno-strict-aliasing",
      "-Wno-null-pointer-arithmetic",
      "-Werror",
    ],

    //todo: distinguish mtk internal or customer
    product_variables: {
        eng: {
            cflags: [
                "-D_MTK_ENG_",
                // "-D_MTK_PTHREAD_DEBUG_",
            ],
        },
    },

    include_dirs: [
        "vendor/amazon/mt8163/proprietary/external/aee/binary/inc",
        "system/core/libunwindstack/include"
    ],

    local_include_dirs: ["include"],

    name: "libudf",
    proprietary: true,
    clang: true,
    sanitize: {
        never: true,
    },
}
